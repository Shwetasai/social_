.env
.venv/
env/
venv/
ENV/
env.bak/
venv.bak/

# Ignore virtual environment directories
/.env
/.venv
/venv/
/ENV
/env.bak
/venv.bak

# Ignore system files
.DS_Store
Thumbs.db

# Ignore compiled files
*.so

# Ignore coverage reports
htmlcov/
.coverage
.tox/
.cache
nosetests.xml
coverage.xml
*.cover
.hypothesis/

# Ignore Django static and media files
/static/*
!/static/.gitignore
/media/*
!/media/.gitignore

# Ignore translations
*.mo
*.pot

